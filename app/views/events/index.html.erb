
<h4>Your Favorites Games</h4>
  <div>
    <%@favorite_teams.each do |team|  %>
      <div>
        <h4><%= team.name %> <%= team.nickname %> </h4>
        <% team.schedule.each do |game| %>
          <p><%= game.away_team.full_name %> @ <%= game.home_team.full_name %></p>
          <p>Time: <%= game.format_time(game) %></p>
          <p>Channel: <%= game.network %></p>
          <div>
            <%= link_to 'Create new event', new_game_event_path(game.id) %>
          </div>
          <div class="game-event">
            <% game.events.each do |event| %>
              <h3><%= event.name %></h3>
              <ul>
                <li>
                  <%= event.description %>
                </li>
                <li>
                  <%= event.location %>
                </li>
                <li>
                  <%= event.full_address %>
                </li>
              </ul>
              <div >
                <%= link_to 'See Details', game_event_path(game.id, event.id)  %>
              </div>
            <% end %>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
