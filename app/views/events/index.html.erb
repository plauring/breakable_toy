<h1>So many events</h1>

<ul>
  <% @events.each do |event| %>
    <li><%= link_to event.name, event_path(event.id) %></li>
  <% end %>
</ul>


<div>
  <%= link_to 'Create new event', new_event_path %>
</div>

<h4>Your Favorites Games</h4>
  <div>
    <%@favorite_teams.each do |team|  %>
      <div>
        <h4><%= team.name %> <%= team.nickname %> </h4>
        <% team.schedule.each do |game| %>
          <p><%= game.away_team.full_name %> @ <%= game.home_team.full_name %></p>
          <p>Time: <%= game.format_time(game) %></p>
          <p>Channel: <%= game.network %></p>
          <div class="game-event">
            <% game.events.each do |event| %>
              <h3><%= event.name %></h3>
              <ul>
                <li>
                  <%= event.description %>
                </li>
                <li>
                  <%= event.location %>
                </li>
                <li>
                  <%= event.full_address %>
                </li>
              </ul>
              <div >
                <%= link_to 'See Details', event_path(event.id)  %>
              </div>
            <% end %>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
